@model Demo.DTO.md_userDTO
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1 class="auth-title">Log in.</h1>
<p class="auth-subtitle mb-5">Log in with your data that you entered during registration.</p>

@{
    if (TempData["alrt_msg"] != null)
    {
        var alrt_msg = Newtonsoft.Json.JsonConvert.DeserializeObject<ErrorViewModel>(TempData["alrt_msg"].ToString());
        if (@alrt_msg != null)
        {
            <div class="alert @alrt_msg.class_name alert-dismissible show fade">
                @alrt_msg.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }
}

<div asp-validation-summary="ModelOnly"></div>

<form method="post">
    <div class="form-group position-relative has-icon-left mb-4">
        <input type="text" asp-for="username" class="form-control form-control-xl" placeholder="Username">
        <div class="form-control-icon">
            <i class="bi bi-person"></i>
        </div>
        <span asp-validation-for="username" class="text-danger customValidation"></span>
    </div>
    <div class="form-group position-relative has-icon-left mb-4">
        <input type="password" asp-for="password" class="form-control form-control-xl" placeholder="Password">
        <div class="form-control-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <span asp-validation-for="password" class="text-danger customValidation"></span>
    </div>
    <div class="form-check form-check-lg d-flex align-items-end">
        <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label text-gray-600" for="flexCheckDefault">
            Keep me logged in
        </label>
    </div>
    <button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Log in</button>
</form>
<div class="text-center mt-5 text-lg fs-4">
    <p class="text-gray-600">
        Don't have an account? <a asp-controller="Auth" asp-action="SignUp" class="font-bold">
            Sign
            up
        </a>
    </p>
    <p><a asp-controller="Auth" asp-action="ForgotPassword" class="font-bold">Forgot password?</a></p>
</div>


